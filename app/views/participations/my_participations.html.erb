<div class="container mt-5 mb-5">
  <h2 class="titulo">Torneos confirmados</h2>
  <br>
  <div class="row">
    <% @payed_participations.each do |p| %>
      <div class="col-4">
        <% tournament = Tournament.find(p.tournament_id) %>
        <section class="articles mt-3">
          <article>
            <div class="article-wrapper">
              <figure>
                <%# Display the tournament photo if available %>
                <% if tournament.photo.key.nil? %>
                  <img src="https://www.tourinnovacion.cl/wp-content/uploads/2022/06/padel.jpg">
                <% else %>
                  <%= image_tag(tournament.photo, alt: "Tournament photo") %>
                <% end %>
              </figure>
              <div class="article-body mb-2">
                <h5 class="article-title"><%= tournament.name %></h5>
                <h6><%= number_to_currency(tournament.price, precision: 0, unit: 'CLP $ ', delimiter: '.') %></h6>
