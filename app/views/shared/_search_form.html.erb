<div class="container mt-3 mb-1">
  <%= form_with url: tournaments_path, method: :get, required: false do |f| %>
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.label :type, "Type of tournament" %>
        <%= f.select :type, options_for_select(@types), {prompt: 'Select tournament type', :multiple => true, size: 3 }, class: "form-control" %>
      </div>
      <div class="form-group col-md-2">
        <%= f.label :max_price, "Maximum price" %>
        <%= f.number_field :max_price, placeholder: 'Enter maximum price', class: "form-control" %>
      </div>
      <div class="form-group col-md-2">
        <%= f.label :start_date, "Start date" %>
        <%= f.date_field :start_date, class: "form-control" %>
      </div>
      <div class="form-group col-md-2">
        <%= f.label :end_date, "End date" %>
        <%= f.date_field :end_date, class: "form-control" %>
      </div>
      <div class="form-group col-md-auto ml-auto mt-4">
        <%= f.submit "Search", class: "btn btn-primary", style: "background-color: #184A22; font-family: Changa;" %>
      </div>
    </div>
  <% end %>
</div>
