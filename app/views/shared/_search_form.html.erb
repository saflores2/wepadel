    <div class="form_style">
      <%= form_with url: tournaments_path, method: :get, class: "d-flex mt-2" do |f| %>
        <div class="row mx-auto">
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.select :category, options_for_select(@categories), {prompt: 'Categoría', :multiple => true, size: 3 } %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.select :type, options_for_select(@types), {prompt: 'Tipo de torneo', :multiple => true, size: 3 } %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
            <%= f.number_field :max_price, placeholder: 'Precio máximo' %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.date_field :start_date, label: 'Fecha de inicio' %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.date_field :end_date, label: 'Fecha de finalización' %>
          </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
            <%= f.submit "Buscar", class: "btn btn-primary" %>
         </div>
       </div>
      <% end %>
    </div>
