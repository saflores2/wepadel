<div class="container">
  <%= form_with url: tournaments_path, method: :get, class: "d-flex" do |f| %>
    <%= f.select :category, options_for_select(@categories), {prompt: 'CategorÃ­a', :multiple => true } %>
    <%= f.select :type, options_for_select(@types), {prompt: 'Tpo de torneo', :multiple => true } %>
    <%= f.number_field(:max_price) %>
    <%= f.date_field(:start_date) %>
    <%= f.date_field(:end_date) %>
    <%= f.submit "Buscar" %>
  <% end %>


  <% @tournaments.each do |tournament| %>
    <br>
    <%= link_to tournament.name, tournament_path(tournament.id) %>
  <% end %>


  <div class="row mt-5 mb-5">
   <% @tournaments.each do |tournament| %>
      <div class="col-sm-6 col-md-4 col-lg-4">
        <section class="articles mt-3">
          <article>
            <div class="article-wrapper">
              <figure>
                <%# Display the tournament photo if available %>
                <% if tournament.photo.key.nil?%>
                  <img src="https://www.tourinnovacion.cl/wp-content/uploads/2022/06/padel.jpg">
                <% else %>
                  <%= image_tag(tournament.photo, alt: "Tournament photo") unless tournament.photo.key.nil? %>
                <% end %>
              </figure>
              <div class="article-body">
                <h5 class="article-title"><%= tournament.name %></h5>
                <h6><%= number_to_currency(tournament.price, precision: 0, unit: 'CLP $ ', delimiter: '.') %></h6>
                <a href="/tournaments/<%=tournament.id%>" class="read-more" >
                  Read more <span class="sr-only">about this is some title</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </a>
              </div>
            </div>
          </article>
        </section>
      </div>
    <% end %>
  </div>
</div>
