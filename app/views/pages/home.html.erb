 <!--fin Banner-->

 <style>
  body {
    font-family: 'Roboto', sans-serif;
    font-size: 16px;
    line-height: 1.5;
    color: #333;
    background-color: #f7f7f7;
  }

   .form-group {
    margin-bottom: 20px;
  }

  label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
  }

  input[type="text"],
  input[type="number"],
  input[type="date"],
  select {
    display: block;
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: none;
    border-radius: 4px;
    background-color: #EEE;
    box-shadow: inset 0px 0px 2px rgba(0, 0, 0, 0.1);
  }

  input[type="submit"] {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    font-weight: bold;
    text-align: center;
    color: #EEE;
    background-color: #007bff;
    border: none;
    border-radius: 4px;
    box-shadow: 0px 0px 2px rgba(0, 0, 0, 0.1);
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
  }

  input[type="submit"]:hover {
    background-color: #0069d9;
  }
</style>


  <!-- Aqui comienzan las card de tournament-->

  <div class="container">
    <div class="form_style">
      <%= form_with url: tournaments_path, method: :get, class: "d-flex mt-2" do |f| %>
        <div class="row mx-auto">
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.select :category, options_for_select(@categories), {prompt: 'Categoría', :multiple => true, size: 3 } %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.select :type, options_for_select(@types), {prompt: 'Tipo de torneo', :multiple => true, size: 3 } %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
            <%= f.number_field :max_price, placeholder: 'Precio máximo' %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.date_field :start_date, label: 'Fecha de inicio' %>
         </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
           <%= f.date_field :end_date, label: 'Fecha de finalización' %>
          </div>
         <div class="col-sm-6 col-md-4 col-lg-2">
            <%= f.submit "Buscar", class: "btn btn-primary" %>
         </div>
       </div>
      </div>
     <% end %>
    <div class="row mt-5 mb-5">
      <%# This code displays a list of tournaments %>
      <% @tournaments[0, [@tournaments.size, 3].min].each do |tournament| %>
        <div class="col-sm-6 col-md-4 col-lg-4">
          <section class="articles">
            <article>
              <div class="article-wrapper">
                <figure>
                  <%# Display the tournament photo if available %>
                  <%= image_tag(tournament.photo, alt: "Tournament photo") unless tournament.photo.key.nil? %>
                </figure>
                <div class="article-body">
                  <h5 class="article-title"><%= tournament.name %></h5>
                  <h6><%= number_to_currency(tournament.price, precision: 0, unit: 'CLP $ ', delimiter: '.') %></h6>
                  <a href="/tournament/<%=tournament.id%>" class="read-more" onclick="return confirm('Are you sure you want to navigate to this tournament?')">
                    Read more <span class="sr-only">about this is some title</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          </section>
        </div>
      <% end %>
    </div>
  </div>




  <!-- Aqui terminan las card de Tournament-->
