<!---Banner-->

<div class="banner">
  <div class="bannerr">

    <div style="margin-left: 90px; color: aliceblue; font-weight: 600;">
      <h2> WePadel </h2>
      <p><span data-controller="prueba"></span></p>
    </div>
      </div>
</div>

<%= render "shared/search_form" %>

<div class="row mt-5 mb-5">
  <!-- Aqui comienzan las card de tournament-->
  <%# This code displays a list of tournaments %>
  <% @tournaments[0, [@tournaments.size, 3].min].each do |tournament| %>
  <div class="col-sm-6 col-md-4 col-lg-4">
    <section class="articles mt-3">
      <article>
        <div class="article-wrapper shadow">
          <figure>
            <%# Display the tournament photo if available %>
            <% if tournament.photo.key.nil?%>
            <img src="https://www.tourinnovacion.cl/wp-content/uploads/2022/06/padel.jpg">
            <% else %>
            <%= image_tag(tournament.photo, alt: "Tournament photo") unless tournament.photo.key.nil? %>
            <% end %>
          </figure>
          <div class="article-body">
            <h5 class="article-title"><%= tournament.name %></h5>
            <h6><%= number_to_currency(tournament.price, precision: 0, unit: 'CLP $ ', delimiter: '.') %></h6>
            <a href="/tournaments/<%=tournament.id%>" class="read-more">
              Más información <span class="sr-only">about this is some title</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="icon" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd"
                  d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
                  clip-rule="evenodd" />
              </svg>
            </a>
          </div>
        </div>
      </article>
    </section>
  </div>
  <% end %>
</div>
</div>


  <!-- Aqui terminan las card de Tournament-->
